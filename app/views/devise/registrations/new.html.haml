#new_user_registration(style="width: 600px; margin: 100px auto")
  .panel.panel-info
    .panel-heading
      Регистрация
    .panel-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true, html: { class: "form-horizontal", autocomplete: "off", role: "form" } ) do |f|
        = f.input :first_name, label: "Имя", required: true
        = f.input :last_name, label: "Фамилия", required: true
        = f.input :email, label: "Email", required: true
        = f.input :phone, label: "Телефон", required: true
        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
        = f.input :password_confirmation, required: true

        = submit_tag 'Приступить к работе', :id => "submit_button", :class => "btn btn-primary"
    .panel-footer
      = render "devise/shared/links"

