#new_user_registration(style="width: 600px; margin: 100px auto")
  .panel.panel-info
    .panel-heading
      Регистрация
    .panel-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true, html: { class: "vertical_form", autocomplete: "off", role: "form" } ) do |f|
        = f.input :first_name, label: "ФИО", required: true
        = f.input :email, label: "Email", required: true
        = f.input :phone, label: "Телефон", required: true
        = f.submit 'Регистрация', :id => "submit_button", :class => "btn btn-primary"
    .panel-footer
      = render "devise/shared/links"

:javascript

  $(document).ready(function(){

    $("#user_phone").mask("(999) 999-9999");

  });

