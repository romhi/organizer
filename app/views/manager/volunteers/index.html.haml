        = volunteer.congregation.city.name
      %td
        = volunteer.congregation.name
      %td
        = volunteer.last_name
      %td
        = volunteer.first_name
      %td
        = volunteer.age
      %td
        = volunteer.responsibility.name
      %td
        = volunteer.service_time_id
      %td
        = volunteer.convenient_start_time
      %td
        = volunteer.convenient_end_time
      %td
        = volunteer.will_be_since_8
      %td
        = volunteer.will_be_until_17
