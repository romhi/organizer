.top-right-actions
  = simple_form_for :volunteer, url: "/admin/volunteers", method: :get, html: { style: "display: inline-block;", class: "form-inline" } do |f|
    = f.input :part, label: false, input_html: { name: "part", value: "#{params[:part]}" }
    = f.submit "Найти", class: "btn btn-default"
  = link_to "Добавить", new_admin_volunteer_path, class: "btn btn-primary"

%h1 Добровольцы (#{@volunteers.count})

%table.table.table-bordered
  %tr
    %th.td-18
    %th
      Город
    %th
      Собрание
    %th
      Фамилия
    %th
      Имя
    %th
      Возраст
    %th
      Назначение
    %th
      Время и место служения
    %th
      Время начала служения
    %th
      Время окончания служения
    %th
      Приедет в 8:00
    %th
      Останется до 17:00
    %th
      Может на улице
    %th
      Автомобилист
    %th
      Отдел
    %th
      Телефон
    %th
      EMAIL
    %th
