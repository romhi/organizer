.top-right-actions
  = simple_form_for :volunteer, url: "/admin/volunteers", method: :get, html: { style: "display: inline-block;", class: "form-inline" } do |f|
    = f.input :part, label: false, input_html: { name: "part", value: "#{params[:part]}" }
    = f.submit "Найти", class: "btn btn-default"
  = link_to "Добавить", new_admin_volunteer_path, class: "btn btn-primary"

%h1 Добровольцы (#{@volunteers.count})

%table.table.table-bordered
  %tr
    %th.td-18
      \#
    %th.td-18
    %th
      Город
    %th
      Собрание
    %th
      ФИ
    %th
      Лет
    %th
      Назн

    %th
      Может с
    %th
      Может до
    %th
      08
    %th
      17
    %th
      УЛ
    %th
      Авто
    %th
      Телефон
    %th
      EMAIL
    %th
      Комментарии
    %th
      Время и место служения
    %th.td-18
  - @volunteers.each_with_index do |volunteer, index|
    %tr
      %td
        = index + 1
      %td
        = edit_link [:edit,:admin , volunteer]
      %td
        = volunteer.congregation.city.name
      %td
        = volunteer.congregation.name
      %td
        #{volunteer.last_name} #{volunteer.first_name}
      %td
        = volunteer.age
      %td
        = volunteer.responsibility.name

      %td
        = volunteer.convenient_start_time.strftime("%H:%M")
      %td
        = volunteer.convenient_end_time.strftime("%H:%M")
      %td
        = volunteer.will_be_since_8
      %td
        = volunteer.will_be_until_17
      %td
        = volunteer.outdoor
      %td
        = volunteer.car
      %td
        = volunteer.phone
      %td
        = volunteer.email
      %td
        = volunteer.comment
      %td
        = volunteer.vacancy_id
      %td
        = delete_link [:admin, volunteer]


